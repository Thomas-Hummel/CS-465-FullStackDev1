<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								{{#each newsItems}}
								<h3>{{this.section}}</h3>
								<ul>
									{{#each this.items}}
									<li>
										<a href="/news">{{this.title}}</a>
									</li>
									{{/each}}
								</ul>
								{{/each}}
							</div>
							<div>
								<h1>News</h1>
								{{#each newsHighlights}}
								<img src="images/{{this.image}}" alt="Img">
								<h2>{{this.title}}</h2>
								<span class="time">{{this.publishDate}}<br> by: {{this.author}}</span>
								{{{this.articleText}}}
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer }}
	</div>
</body>
</html>